@import "variables","mixins","compass/reset";

*{
    box-sizing:border-box;
}
body{
    font-size: $fontSize;
    color: $bodycolor;
    background-color:$bodyback;
    font-family:$mainline-ff;
}
a{
    color:$bodycolor;
    text-decoration:none;
}
.content{
	width:100%;
}

$header-height:.86rem;
$header-lineheight:.64rem;
$bottom-height:1rem;
header{
	width:100%;
	height:.86rem;
	background-color:$ele-backcolor;
	color:#fff;
	padding:.11rem;
	position:fixed;
	top:0;
	left:0;
	z-index:9;

	.logo{
		width:1.2rem;
		height:$header-lineheight;
		display:inline-block;
		text-align:center;
		position:relative;
		z-index:2;

		img{
			width:100%;
			height:100%;
		}
	}
	.flss-box{
		position:absolute;
		top:.11rem;
		left:1.4rem;
		bottom:.11rem;
		right:.8rem;
		line-height:$header-lineheight;
		background-color:#c01112;
		border-radius:.02rem;
		color:#fff;

		i{
			font-size:.4rem;
			padding-left:.1rem;
		}
	}
	.ssbtn{
		width:.7rem;
		height:$header-lineheight;
		line-height:$header-lineheight;
		text-align:center;
		display:inline-block;
		float:right;
		color:#fff;

		i{
			font-size:.5rem;
		}
	}
}

$fltabs-height:.74rem;
.fltabs{
	width:100%;
	height:.74rem;
	line-height:.74rem;
	text-align:center;
	background-color:#fff;
	position:fixed;
	top:$header-height;
	left:0;
	z-index:9;
	@include flexbox();

	.tab-link{
		@include boxflex();
		width:100%;
		display:block;
		text-align:center;
		position:relative;
		font-size:$ele-size13;

		&:after{
			@include lineafter-bottom;
		}
		&.active:after{
			@include lineafter-bottom2(3px);
		}
	}
}

.tab{
	display:none;
}
.tab.active{
	display:block;
}

$flbox-width:1.6rem;
.flbox{
	width:100%;
	position:relative;	
}
.yscroll1{
	position:fixed;
	width:$flbox-width;
	top:$header-height+$fltabs-height;
	left:0;
	bottom:$bottom-height;
	background-color:$bodyback;
	z-index:8;
	

	.flscroll{
		width:100%;
		height:100%;
		position:absolute;
		top:0;
		left:0;
		overflow-y:auto;
	}
	.lbbox{
		width:100%;

		li{
			width:100%;
			height:.9rem;
			line-height:.9rem;
			font-size:$ele-size12;
			text-align:center;
			position:relative;

			&:after{
				@include lineafter-bottom();
			}
			&.active{
				border-color:$ele-fontcolor;
				color:$ele-fontcolor;
				background-color:#fff;

				&:after{
					@include lineafter-left2(3px);
				}
			}
		}
	}
}
.flcont{
	width:100%;
	height:100%;
	background-color:#fff;
	padding-left:$flbox-width;
	z-index:1;

	.lbshopbox{
		width:100%;
		padding:$ele-padding;

		dt{
			height:.8rem;
			line-height:.8rem;
			position:relative;
			text-align:center;
			font-size:$ele-size16;

			&:after{
				content:'';
			    position:absolute;
			    left:0;
			    bottom:.4rem;
			    right:auto;
			    top:auto;
			    height:1px;
			    width:100%;
			    background-color:#ddd;
			    display:block;
			    z-index:2;
			    -webkit-transform-origin:50% 100%;
			    transform-origin:50% 100%;
			    -webkit-transform: scaleY(.5);
			    transform: scaleY(.5);
			    backface-visibility:hidden;
			}
			span{
				background-color:#fff;
				position:relative;
				z-index:3;
				display:inline-block;
				padding:0 .08rem;
			}
		}
		dd{
			width:100%;
			padding-right:.3rem;

			&:after{
				@include clearfix();
			}

			a{
				position: relative;
			    float:left;
			    width:33.33%;
			    height:1.97rem;
			    margin:.1rem .15rem .1rem 0;
			    font-size:.6rem;
			    text-align:center;
			    display:block;
			    color:#333;

			    &:nth-child(3n){
			    	margin-right:-.3rem;
			    }

			    .cover{
			    	height:1.67rem;

				    img{
				    	width:100%;
				    	display:block;
				    }
			    }
			    p{
			    	margin:0;
			    	margin-top:.03rem;
			    	font-size:$ele-size12;
			    }
			}
		}
	}
}

.flppbox{
	width:100%;
	background-color:#fff;
	padding:$ele-padding;

	.pparea{
		width:100%;

		dt{
			width:100%;
			height:.4rem;
			line-height:.4rem;
			font-size:$ele-size15;
			margin:.15rem 0;
			padding-left:.16rem;
			position:relative;

			&:before{
				content:'';
			    position:absolute;
			    left:0;
			    bottom:0;
			    right:auto;
			    top:auto;
			    height:100%;
			    width:3px;
			    background-color:#d71416;
			    display:block;
			    z-index:1;
			    -webkit-transform-origin:50% 100%;
			    transform-origin:50% 100%;
			    -webkit-transform:scaleX(.5);
			    transform:scaleX(.5);
			    backface-visibility:hidden;
			}
		}
		dd{
			width:100%;
			padding-right:.3rem;
			position:relative;

			&:after{
				@include clearfix();
			}
			a{
				width:25%;
				height:1.41rem;
				padding:.05rem;
				margin:.1rem .1rem .1rem 0;
				border:1px solid #ddd;
				display:block;
				position:relative;
				float:left;

				&:nth-child(4n){
					margin-right:-.3rem;
				}
				img{
					width:100%;
					height:100%;
				}
			}
		}
	}
}

$navbar-height:1rem;
.navbar{
	position:fixed;
	bottom:0;
	left:0;
	width:100%;
	height:$navbar-height;
	background-color:#f7f7f8;
	z-index:99;

	&:after{
		@include lineafter-top();
	}

	.nav-list{
		position:relative;
    	display:table-cell;
    	width:1%;
    	height:$navbar-height;
    	text-align:center;
    	vertical-align:middle;

    	&.active{
    		color:$ele-fontcolor;
    	}
    	i{
    		font-size:.4rem;
    	}

    	.tab-label{
			display:block;
	    	font-size:$ele-size12;
	    	position:relative;
	    	top:.05rem;
		}
		.badge{
			position: absolute;
		    top:.1rem;
		    left:50%;
		    z-index:100;
		    height:.26rem;
		    line-height:.26rem;
		    min-width:.26rem;
		    padding:0 .05rem;
		    color:#fff;
		    vertical-align:top;
		    background: red;
		    border-radius:.2rem;
		    margin-left:.02rem;
		}
	}
}
.bdypadd{
	padding-top:$header-height+$fltabs-height;
	padding-bottom:$navbar-height;
}


/*
*newindex start
*/
.newIndex-pdd{
	padding-top:$header-height;
	padding-bottom:$navbar-height;
}

.indx-nav{
	width:100%;
	background-color:#fff;
	position:relative;

	&:after{
		@include lineafter-bottom();
	}
	a{
		width:1%;
		height:.8rem;
		display:table-cell;
		vertical-align:middle;
		text-align:center;
		font-size:$ele-size13;
		@include highlight();

		span{
			position:relative;
			display:block;
			padding:.2rem 0;
		}
		&.active span{
			&:after{
				content:'';
			    position:absolute;
			    left:0;
			    bottom:0;
			    right:auto;
			    top:auto;
			    height:3px;
			    width:100%;
			    background-color:$ele-fontcolor;
			    display:block;
			    z-index:2;
			    -webkit-transform-origin:50% 100%;
			    transform-origin:50% 100%;
			    -webkit-transform: scaleY(.5);
			    transform: scaleY(.5);
			    backface-visibility:hidden;
			}
		}
	}
}
.indx-banner{
	width:100%;
	position:relative;

	.swiper-container,.swiper-wrapper,.swiper-slide{
		width:100%;
		height:3rem;

		img{
			width:100%;
			height:100%;
		}
	}
}
.indx-chunk{
	width:100%;
	position:relative;
	margin-top:$ele-margin;
	background-color:#fff;

	&:before{
		@include lineafter-top();
	}
	&:after{
		@include lineafter-bottom();
	}
}
.indx-menu2{
	width:100%;
	position:relative;

	a{
		width:1%;
		height:2.3rem;
		display:table-cell;
		vertical-align:middle;
		text-align:center;
		font-size:$ele-size15;
		@include highlight();
		
		span{
			display:block;
			width:1rem;
			height:1rem;
			line-height:1rem;
			margin:0 auto;
			@include radius50();

			i{
				font-size:.4rem;
				color:#fff;
			}
			&.icon1{
				background-color:#59d715;

				i{
					font-size:.6rem;
				}
			}
			&.icon2{
				background-color:#b3d658;
				i{
					font-size:.5rem;
				}
			}
			&.icon3{
				background-color:#fa911b;
			}
			&.icon4{
				background-color:#ff4d7d;
			}
		}
		label{
			display:block;
			margin-top:.14rem;
		}
	}
}
.indx-tjbox{
	width:100%;
	padding:$ele-padding;
	padding-right:1rem;
	position:relative;

	&:after{
		@include clearfix();
	}
	li{
		width:33.33%;
		margin-right:.4rem;
		float:left;

		&:nth-child(3n){
			margin-right:-.8rem;
		}
		a{
			display:block;
			@include highlight();
		}
		img{
			width:100%;
			height:1.5rem;
			display:block;
		}
		p{
			display:block;
			padding-top:.1rem;
			text-align:center;
		}
		.price{
			color:$ele-fontcolor;
			font-size:$ele-size16;
		}
		small{
			font-size:$ele-size12;
			margin-left:.1rem;
			color:#999;
			font-style:italic;
		}
	}
}
.indx-xcbox{
	width:100%;
	height:3.1rem;

	img{
		display:block;
		width:100%;
		height:100%;
	}
}
.indx-tjshop{
	width:100%;
	padding:$ele-padding;

	.tj-h2{
		width:100%;
		font-size:$ele-size16;
		padding-left:.2rem;
		position:relative;

		&:before{
			content:'';
		    position:absolute;
		    left:0;
		    bottom:0;
		    right:auto;
		    top:auto;
		    height:100%;
		    width:3px;
		    background-color:$ele-fontcolor;
		    display:block;
		    z-index:2;
		    -webkit-transform-origin:100% 50%;
		    transform-origin:100% 50%;
		    -webkit-transform: scaleX(.5);
		    transform: scaleX(.5);
		    backface-visibility:hidden;
		}
	}
	.tjshop-box{
		width:100%;
		padding-right:.2rem;
		position:relative;
		
		&:after{
			@include clearfix();
		}
		dd{
			width:50%;
			float:left;
			margin-right:.2rem;
			position:relative;
			margin-top:$ele-margin;
			border:1px solid #ececeb;
			font-size:$ele-size13;
			
			&:nth-child(2n){
				margin-right:-.2rem;
			}
			a{
				display:block;
				position:relative;
				padding:.1rem;
				@include highlight();
			}
			.img-box{
				width:100%;
				height:2.35rem;
				position:relative;

				img{
					width:100%;
					height:100%;
				}
				.indx-gjbox{
					width:100%;
					height:.32rem;
					line-height:.34rem;
					padding-left:.36rem;
					font-size:$fontSize;
					position:absolute;
					top:0;
					left:0;
					z-index:2;
					display:table-cell;

					img{
						position:absolute;
						top:0;
						left:0;
						width:.32rem;
						height:.32rem;
						display:inline-block;
					}
				}
			}
			.shop-tit{
				margin-top:.15rem;
				height:.6rem;
				line-height:.3rem;
				@include overflow-2row();
			}
			.shop-pricbox{
				width:100%;
				line-height:.3rem;
				margin-top:.1rem;

				.n-price{
					display:inline-block;
					color:$ele-fontcolor;
					font-size:$ele-size14;
				}
				.o-price{
					display:inline-block;
					color:#999;
					font-size:.21rem;
					margin-left:.06rem;
				}
				.discount{
					float:right;
					text-align:right;
					color:#999;
					font-size:$ele-size12;
				}
			}
		}
	}
}
.load-more{
	width:100%;
	padding:.4rem 0;
	position:relative;

	a{
		width:2.4rem;
		height:.6rem;
		line-height:.6rem;
		font-size:$ele-size12;
		text-align:center;
		margin:0 auto;
		border:1px solid #ddd;
		background-color:#f4f4f6;
		display:block;
		@include radius(.05rem);
		@include highlight();
	}
}
/*
*newindex end
*/
