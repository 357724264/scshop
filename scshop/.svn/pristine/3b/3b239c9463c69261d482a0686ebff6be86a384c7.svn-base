html{
	font-size:62.5%;
}
body {
	font-family: 'microsoft yahei', Helvetica, Arial;
	font-size:1.2rem;
	background-color: #fff;
	color: #999;
	overflow-x: hidden;
	min-width:1024px;
}
.fix{
	padding-top:3.4rem;
}
h1{
	font-size:2.4rem;
}
:root { -webkit-text-size-adjust: none; -moz-text-size-adjust: none; -ms-text-size-adjust: none;-webkit-transform-origin-x: 0;
 -o-text-size-adjust: none; text-size-adjust: none;}

.logo-area{
	margin:0px auto;
	height:7.1rem;
}
.login-area{
	height:430px;
}
.login-area .login-box{
	width:350px;
	height:300px;
	padding:10px 17px;
	box-sizing:border-box;
	background-color:#fff;
	margin-top:63px;
}
.login-box .form-group,.scshopshzcbox .form-group{
	margin-bottom:5px;
	position:relative;
}
.login-box .form-group .form-control,.scshopshzcbox .form-group .form-control{
	line-height:40px;
	height:40px;
	border-radius:0;
	outline:none;
	padding:5px;
}
.login-box #username{
	background:url(../images/i_user.png) no-repeat 0 0;
	background-size:40px 40px;
	padding-left:40px;
	text-indent:10px;
}
.login-box #password{
	background:url(../images/i_pass.png) no-repeat 0 0;
	background-size:40px 40px;
	padding-left:40px;
	text-indent:10px;
}
.btn-zdy,#register-btn{
	width:100%;
	height:40px;
	margin-top:6px;
	color:#fff;
	outline:none;
	border:0px;
	font-size:1.5rem;
	-webkit-appearance:none;
	background-color:#ba3a17;
}
.btn-zdy:hover,.btn-zdy:active,.btn-zdy:visited{
	color:#fff;
	background-color:#ba3a17;
}
.errors{
	height:2rem;
	line-height:2rem;
	display:block;
}
.has-error .form-control{
	border-color:#e5007f;
}
.has-error .errors{
	color:#e5007f;
}
.other{
	width:100%;
	margin-top:25px;
}
.other a{
	font-size:1.5rem;
	color:#666;
}
.sign{
	position:absolute;
	width:100%;
	text-align:center;
	bottom:20px;
	left:0px;
}

.scshopshzcbox{
	padding:50px 0 30px 0;
}
.scshopshzcbox .control-label{
	padding-top:11px;
}

.zjzarea{
	width:100%;
	height:100%;
	position:relative;
}
.zjztit{
	font-size:15px;
}
.zhengjiangroup{
	width:100%;
    padding-right:15px;
    margin-bottom:30px;
    position: relative;
}
.zhengjiangroup:after{
	clear:both;
	content:"";
	display:block;
}
.zhengjiangroup .zjzlist{
	width:25%;
	float:left;
	padding:16% 0 0 0;
	margin:5px 5px 5px 0;
	border:1px solid #c1c1c1;
	position:relative;
}
.zhengjiangroup .zjzlist:nth-child(4n){
	margin-right:-15px;
}
.zhengjiangroup .zjzlist .cover{
	position:absolute;
	top:0px;
	left:0px;	
	right:0px;
	bottom:0px;
	text-align:center;
}
.zhengjiangroup .zjzlist .cover .coverbox{
	width:100%;
	height:100%;
	position:relative;
}
.coverbox .zjzfileinput{
	position:absolute;
	top:0;
	left:0;
	width:100%;
	height:100%;
	font-size:300%;
	opacity:0;
	z-index:2;
}
.coverbox .zjzimg{
	width:100%;
	height:100%;
	border:0;
}

.zjzbtnbox{
	margin-bottom:20px;
}