.custom-service{
	position:fixed;
	top:100px;
	right:50px;
	z-index:9999;
	font-size:10px;
	width:48px;
	height:48px;	
	text-align:center;
	background:#9d55b8;
	border-radius:50%;
	cursor:pointer;
	-webkit-tap-highlight-color:rgba(0,0,0,0);
}
.custom-service i{
	line-height:48px;
	color:#fff;
	font-size:26px;
}
.custom-service span{
	position:absolute;
	top:0;
	right:0;
	padding:1px 3px;
	background:#d71416;
	color:#fff;
	font-size:12px;
	border-radius:8px;
}